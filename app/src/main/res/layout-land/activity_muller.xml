<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/btn_calcular_muller"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginBottom="144dp"
        android:layout_marginEnd="46dp"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="46dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="143dp"
        android:text="@string/btn_BuscarRaiz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_x2_muller"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_função_muller"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="@string/txt_hint_Funcao"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_função_muller" />

    <TextView
        android:id="@+id/textView_função_muller"
        android:layout_width="200dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/funcao"
        android:textAlignment="center"
        android:textSize="@dimen/funcao_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline2" />

    <TextView
        android:id="@+id/textView_x0_muller"
        android:layout_width="57dp"
        android:layout_height="19dp"
        android:layout_marginLeft="83dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="14dp"
        android:text="@string/txt_Estimativas_A"
        android:textAlignment="center"
        android:textSize="@dimen/estimativas_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/editText_x0_muller"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_marginLeft="84dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="@string/txt_hint_A"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_x0_muller" />

    <TextView
        android:id="@+id/textView_x1_muller"
        android:layout_width="57dp"
        android:layout_height="19dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14dp"
        android:text="@string/txt_Estimativas_B"
        android:textAlignment="center"
        android:textSize="@dimen/estimativas_size"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView_x0_muller"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/editText_x1_muller"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="@string/txt_hint_B"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/editText_x0_muller"
        app:layout_constraintTop_toBottomOf="@+id/textView_x1_muller" />

    <TextView
        android:id="@+id/textView_x2_muller"
        android:layout_width="57dp"
        android:layout_height="19dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="14dp"
        android:text="@string/txt_Estimativas_C"
        android:textAlignment="center"
        android:textSize="@dimen/estimativas_size"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView_x1_muller"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/editText_x2_muller"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="@string/txt_hint_C"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/editText_x1_muller"
        app:layout_constraintTop_toBottomOf="@+id/textView_x2_muller" />

    <TextView
        android:id="@+id/textView_tol_muller"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="13dp"
        android:text="@string/txt_erroMinimo"
        android:textAlignment="center"
        android:textSize="@dimen/estimativas_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_x1_muller" />

    <EditText
        android:id="@+id/editText_tol_muller"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:ems="10"
        android:hint="@string/txt_hint_ERRO"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_tol_muller" />

    <TextView
        android:id="@+id/textView_n_muller"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="13dp"
        android:text="@string/txt_maximoIteracoes"
        android:textAlignment="center"
        android:textSize="@dimen/estimativas_size"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView_tol_muller"
        app:layout_constraintTop_toBottomOf="@+id/editText_x1_muller" />

    <EditText
        android:id="@+id/editText_n_muller"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:ems="10"
        android:hint="@string/txt_hint_N"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/editText_tol_muller"
        app:layout_constraintTop_toBottomOf="@+id/textView_n_muller" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="6dp"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="367dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="200dp"
        android:layout_height="27dp"
        android:layout_marginEnd="85dp"
        android:layout_marginLeft="82dp"
        android:layout_marginRight="85dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="10dp"
        android:text="Estimativas Iniciais"
        android:textAlignment="center"
        android:textSize="@dimen/funcao_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_função_muller" />

    <Button
        android:id="@+id/btn_help_muller"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>